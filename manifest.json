{
  "name": "Crash",
  "description": "Auto play",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "host_permissions": [
    "https://bc.co/*"
  ],
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab",
    "storage",
    "debugger",
    "notifications",
    "scripting"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}